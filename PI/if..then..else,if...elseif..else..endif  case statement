if..then..else
DECLARE
  a INT := 8; 
BEGIN
  IF a = 8 THEN
    dbms_output.put_line('equals'); 
  ELSE
    dbms_output.put_line('not equal'); 
  END IF;
END;
/


if ... elseif...else...endif
DECLARE
  a NUMBER(3) := 100; -- Declare and initialize the variable 'a' for marks
BEGIN
  IF a >= 65 THEN
    dbms_output.put_line('Grade of the student is A');
  ELSIF a < 65 THEN
    dbms_output.put_line('Grade of the student is B');
  ELSE
    dbms_output.put_line('Student has failed');
  END IF;
  
  dbms_output.put_line('Marks of the student is: ' || a);
END;
/


case

DECLARE
  Grade CHAR(1) := 'A'; -- Declare and initialize Grade variable
BEGIN
  CASE Grade
    WHEN 'A' THEN 
      dbms_output.put_line('Excellent');
    WHEN 'B' THEN 
      dbms_output.put_line('Very good');
    WHEN 'C' THEN 
      dbms_output.put_line('Good');
    WHEN 'D' THEN 
      dbms_output.put_line('Average');
    WHEN 'F' THEN 
      dbms_output.put_line('Passed');
    ELSE 
      dbms_output.put_line('Failed');
  END CASE;
END;
/
